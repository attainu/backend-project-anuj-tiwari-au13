<section class="login">

    <div class="min-h-screen flex items-center justify-center bg-gray-50 py-12 px-4 sm:px-6 lg:px-8">
        <div class="max-w-md w-full space-y-8">
            <div>
                <img class="mx-auto h-12 w-auto" src="/img/logo.png" alt="Workflow">
                <h2 class="mt-6 text-center text-3xl font-extrabold text-gray-900">
                    Create an account
                </h2>

            </div>
            <form action="/register" method="POST" class="mt-8 space-y-6" action="#" method="POST">

                <% if(messages.error) { %>
                    <span class="text-red-500 text-sm"> <%= messages.error  %></span>
                    <% } %>

                        <input type="hidden" name="remember" value="true">
                        <div class="rounded-md shadow-sm -space-y-px">

                            <div class="py-2">
                                <label class="form-label font-bold py-2" for="email-address" class="sr-only">Name</label>
                                <input id="username" name="name" value="<%= messages.name %>" type="text" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                                    placeholder="Enter your name">
                            </div>

                            <div class="py-2">
                                <label class="form-label font-bold py-2" for="email-address" class="sr-only">Email address</label>
                                <input id="username" name="email" value="<%= messages.email %>" type="email" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-t-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                                    placeholder="Enter email address">
                            </div>
                            <div>
                                <label class="form-label font-bold py-2" for="password" class="sr-only">Password</label>
                                <input id="password" name="password" type="password" autocomplete="current-password" required class="appearance-none rounded-none relative block w-full px-3 py-2 border border-gray-300 placeholder-gray-500 text-gray-900 rounded-b-md focus:outline-none focus:ring-indigo-500 focus:border-indigo-500 focus:z-10 sm:text-sm"
                                    placeholder="Enter password">
                            </div>
                        </div>

                        <div class="flex items-center justify-between">


                            <div class="text-sm">
                                <a href="/login" class="font-medium text-indigo-600 hover:text-indigo-500">
                  Already have an account?
                </a>
                            </div>
                        </div>

                        <div>
                            <button type="submit" class="group relative w-full flex justify-center py-2 px-4 border border-transparent text-sm font-medium rounded-md text-white btn-primary rounded-full focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-indigo-500">
               
                REGISTER
              </button>
                        </div>
            </form>
        </div>
    </div>


</section>