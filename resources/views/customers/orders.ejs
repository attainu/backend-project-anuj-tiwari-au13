<section class="orders light-section ">

    <div class="container h-screen mx-auto pt-12">
        <!-- h-screen in wrapper and mb-auto in table , makes footer to stick at base of page, not stick along with table. -->

        <h1 class="font-bold text-lg mb-4"> All Orders</h1>

        <% if(messages.success) { %>

            <div id="success-alert" class="flex items-center bg-green-500 text-white text-sm font-bold px-4 py-3" role="alert">

                <p> âœ…
                    <%= messages.success %>
                </p>

            </div>

            <% } %>

                <table class="w-full mb-auto table-auto bg-white">

                    <thead>
                        <tr>
                            <th class="px-4 py-2 text-left"> Orders </th>
                            <th class="px-4 py-2 text-left"> Phone No. </th>
                            <th class="px-4 py-2 text-left"> Address </th>
                            <th class="px-4 py-2 text-left"> Time </th>
                        </tr>
                    </thead>
                    <tbody>

                        <% if(orders.length) { %>

                            <% orders.forEach((order)=>{ %>
                                <tr>
                                    <td class="border px-4 py-2">
                                        <a class="link" href="/customers/orders/<%= order._id  %>">
                                            <%= order._id %>
                                        </a>
                                    </td>

                                    <td class="border px-4 py-2">
                                        <%= order.phone %>
                                    </td>


                                    <td class="border px-4 py-2">
                                        <%= order.address %>
                                    </td>

                                    <td class="border px-4 py-2">
                                        <%= moment(order.createdAt).format('MMMM Do YYYY, hh:mm:ss A') %>
                                    </td>




                                </tr>

                                <% }) %>




                                    <% } else { %>

                                        <tr class="p-4"> <span> No orders found ! </span></tr>



                                        <% } %>
                    </tbody>


                </table>

    </div>



</section>