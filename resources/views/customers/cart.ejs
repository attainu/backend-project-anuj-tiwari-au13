<section class="cart mt-14 py-16">

    <% if(session.cart){ %>

        <div class="order container mx-auto xl:w-1/2">

            <div class="flex items-center border-b border-gray-300 pb-4">

                <img src="/img/cart.png" alt="items in cart">
                <h1 class="font-bold ml-4 text-2xl">ORDER SUMMARY </h1>


            </div>

            <div class="dish-list">

                <% for(let dish of Object.values(session.cart.items )) { %>


                    <div class="flex items-center my-8">


                        <img src="/img/<%= dish.item.image %>" class="w-24 " alt="items in cart">

                        <div class=" flex-1 ml-4">

                            <h1>
                                <%= dish.item.name %>
                            </h1>

                            <span><%= dish.item.size %> </span>
                        </div>

                        <span class=" flex-1"><%= dish.qty %>Pcs</span>

                        <span class="font-bold text-lg"> Rs.<%= dish.item.price * dish.qty %> </span>


                    </div>

                    <% } %>








            </div>


            <hr>

            <div class="text-right py-4">

                <div>

                    <span class=" text-lg font-bold">Total Amount</span>
                    <span class=" amount text-2xl font-bold ml-2"> Rs.<%= session.cart.totalPrice %> </span>
                </div>



                <% if(user) {  %>

                    <div>
                        <form class="mt-12" action="/orders" method="POST">

                            <input name="phone" class=" border border-gray-400 p-2 w-1/2 mb-4" type="text" placeholder="Phone Number">
                            <input name="address" class=" border border-gray-400 p-2 w-1/2" type="text" placeholder="Address ">
                            <div>
                                <button class="btn-primary px-6 py-2 rounded-full  text-white font-bold mt-6 " type="submit">ORDER NOW</button>

                            </div>




                        </form>


                    </div>

                    <% } else { %>

                        <a href="/login" class=" inline-block cursor-pointer px-6 btn-primary py-2 rounded-full  text-white font-bold mt-6 "> Login To Continue</a>

                        <% }%>
            </div>

        </div>
        <% } else { %>





            <div class="empty-cart">

                <div class="container mx-auto text-center ">
                    <h1 class="text-5xl font-bold py-4 mb-2">WE DON'T LIKE EMPTY CARTS ðŸ˜”ðŸ˜”</h1>
                    <p class="text-gray-500 text-lg"> To create an order, Go to the Homepage.</p>
                    <br>
                    <img class="w-2/5 mx-auto mt-4 mb4" src="/img/empty-cart.png" alt="empty cart">
                    <a href="/" class="inline-block px-6 py-2 rounded-full btn-primary text-white font-bold mt-12"> GO TO HOMEPAGE</a>

                </div>
            </div>

            <% } %>

</section>